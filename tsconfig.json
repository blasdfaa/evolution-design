{
  "compilerOptions": {
    "target": "es2022",
    "moduleDetection": "force",
    "module": "preserve",
    "paths": {
      "evolution-design/cli": [
        "./src/cli"
      ],
      "evolution-design/meta": [
        "./src/meta"
      ],
      "evolution-design/types": [
        "./src/types"
      ],
      "evolution-design/linter": [
        "./src/linter"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    // "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist"
  ]
}
